---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';

import { getHeaderData, getFooterData } from '~/navigation';
import { MetaData } from '~/types';

const locale = Astro.currentLocale ?? 'fr'
const headerData = getHeaderData(locale);
const footerData = getFooterData(locale);
export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;
const showLanguagePicker = true;
---

<Layout metadata={metadata}>
  <!--<slot name="announcement">-->
  <!--  <Announcement />-->
  <!--</slot>-->
  <slot name="header">
    <Header {...headerData} isSticky showRssFeed showToggleTheme showLanguagePicker={showLanguagePicker} />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
