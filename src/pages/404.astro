---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';
import {useTranslations} from "../i18n/translator";

const locale = Astro.currentLocale ?? 'fr'

const { t } = useTranslations(locale);

const title = `Error 404`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-transparent bg-gradient-to-r from-emerald-900 to-emerald-600 bg-clip-text">404</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">{t('404.sorry')}</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          {t('404.noWorry')}
        </p>
        <a 
        rel="noopener noreferrer" href={getHomePermalink()} 
        class="btn ml-4 btn-primary bg-gradient-to-r from-emerald-800 to-emerald-600 hover:from-emerald-700 hover:to-emerald-500 border-none">
          {t('404.backHome')}
        </a>
      </div>
    </div>
  </section>
</Layout>
